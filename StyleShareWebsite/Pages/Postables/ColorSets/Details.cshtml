@page
@model StyleShareWebsite.Pages.Postables.ColorSets.DetailsModel

@{
    ViewData["PageName"] = ViewData["Title"] = "Kolory";
}

<h1>ColorSet Details</h1>

<div>
    <h4>ColorSet</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColorSet.Colors)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColorSet.Colors)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColorSet.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColorSet.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColorSet.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ColorSet.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ColorSet.Tags)
        </dt>
        <dd class="col-sm-10">
            @foreach (var tag in Model.ColorSet.Tags)
            {
                <p>@tag.Name</p>
            }
        </dd>
    </dl>
</div>
<div>
    @*<a asp-page="./Edit" asp-route-id="@Model.ColorSet?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>*@
    <div>
        @if (Model.CurrentUser != null && Model.CurrentUser.Id == Model.ColorSet.UserId)
        {
            <br/>
            <br/>
            <a asp-page="./Edit" asp-route-id="@Model.ColorSet?.Id">Edit</a>
            <span>|</span>
            <a asp-page="./Delete" asp-route-id="@Model.ColorSet?.Id">Delete</a>
        }   
    </div>
    <a asp-page="./Index">Back to List</a>
</div>
