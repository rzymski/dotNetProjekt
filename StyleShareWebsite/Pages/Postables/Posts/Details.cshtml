@page
@model StyleShareWebsite.Pages.Postables.Posts.DetailsModel

@{
    ViewData["PageName"] = ViewData["Title"] = "Posty";
}

<h1>Post Details</h1>

<div>
    <h4>Post</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Content)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Content)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Title)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Title)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Post.Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Post.Tags)
        </dt>
        <dd class="col-sm-10">
            @foreach (var tag in Model.Post.Tags)
            {
                <p>@tag.Name</p>
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Post?.Id">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>
