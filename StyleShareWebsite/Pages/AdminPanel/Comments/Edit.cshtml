@page
@model StyleShareWebsite.Pages.AdminPanel.Comments.EditModel

@{
    ViewData["PageName"] = ViewData["Title"] = "Panel administracyjny";
}

<h1>Edit</h1>

<h4>Comment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Comment.Id" />
            <input type="hidden" asp-for="Comment.User.Id" />
            <input type="hidden" asp-for="Comment.Date" />
            <div class="form-group">
                <label asp-for="Comment.Title" class="control-label"></label>
                <input asp-for="Comment.Title" class="form-control" />
                <span asp-validation-for="Comment.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.PostableId" class="control-label"></label>
                <select asp-for="Comment.PostableId" class ="fom-control" asp-items="ViewBag.PostableId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Content" class="control-label"></label>
                <input asp-for="Comment.Content" class="form-control" />
                <span asp-validation-for="Comment.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
